<gds>

  <catalog temp_size_limit="0">
    <data>
    <!--GFDM-->
      <!-- PGF -->

      <dataset name = "GFDM/PGF/DAILY"
               file = "/home/stream1/monitor/GFDM_V2/DATA/PGF/DAILY/pgf_daily_0.25deg.ctl"
               format = "nc">
      </dataset>

      <!-- NDVI - moving average -->

      <dataset name = "GFDM/MOD09_NDVI_MA/DAILY"
               file = "/home/stream1/monitor/GFDM_V2/DATA/MOD09_NDVI_MA/DAILY/MOD09CMG_daily_0.25deg.ctl"
               format = "nc">
      </dataset> 

      <!-- VIC PGF -->

      <dataset name = "GFDM/VIC_PGF/DAILY"
               file = "/home/stream1/monitor/GFDM_V2/DATA/VIC_PGF/DAILY/vic_daily_0.25deg.ctl"
               format = "bin">
      </dataset>                                    
 
      <!-- MASKs -->

      <dataset name = "GFDM/MASK"
               file = "/home/stream1/monitor/GFDM_V2/DATA/MISCELLANOUS/mask_global_0.25deg.nc"
               format = "nc">
      </dataset>

    </data>
  </catalog>

  <log mode="file" file="log/gds.log" level="info" />

  <grads>

     <!--<invoker grads_dir="/home/stream1/monitor/African_Drought_Monitor/LIBRARIES/grads-2.0.1.oga.1/Contents"/>-->
     <invoker grads_dir="/home/stream3/hires/local/opengrads/"/>
     <!--<invoker grads_dir="/home/ice/nchaney/UTILS/opengrads"/>-->

  </grads>


  <servlet>

    <filter-abuse enabled="false" hits="1" timeout="0.0001" />
    <filter-overload enabled="false" limit="20" />
    <!-- edit these tags to enable 'throttling' features  -->

    <filter-analysis enabled="true" timeout="0.01"/>

  </servlet>


  <mapper>

    <service-admin enabled="false" auth="open-sesame" /> 
    <!-- edit this tag to enable the administration service -->

  </mapper>


  <privilege_mgr default="public"> 

    <ip_range mask="127.0.0.1" privilege="private" />

    <privilege name="public"> 
    <!-- edit this tag to control public access -->
      <deny path="private" />
    </privilege>

    <privilege name="private" /> <!-- no deny tags, allows full access -->

    <!-- specify more privilege sets and IP range assignments here -->

  </privilege_mgr>

</gds>
